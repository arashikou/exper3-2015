doctype html
html
  meta(charset="utf-8")
  meta(http-equiv="x-ua-compatible" content="ie=edge")

  title EXPER3 2015

  link(rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400italic,700italic,700,400")
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css")
  link(rel="stylesheet" href="styles/qbn.css")

  script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.2/angular.js")
  script(src="scripts/qbn.js")

  body(ng-app="qbn")
    #outer-frame(ng-controller="QbnEngine")
      #chooser(ng-hide="storylet")
        #qualities
          .quality(ng-repeat="quality in qualities track by quality.id")
            .name {{quality.format()}}
            .description {{quality.description}}
        #frontal-choices
          a.choice(ng-repeat="choice in choices track by choice.id" href="" ng-click="choose(choice)" ng-disabled="!choice.isActive()")
            .title {{choice.title | resolve}}
            .text {{choice.text | resolve}}
      #player(ng-show="storylet")
        #storylet-text
          .title {{storylet.title | resolve}}
          .text {{storylet.text | resolve}}
        a.choice(ng-repeat="choice in storylet.choices track by choice.id" href="" ng-click="choose(choice)" ng-disabled="!choice.isActive()")
          .title {{choice.title | resolve}}
          .text {{choice.text | resolve}}
