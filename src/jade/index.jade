  script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.2/angular.js")
  script(src="scripts/qbn.js")

  body(ng-app="qbn")
    #outer-frame(ng-controller="QbnEngine")
      #chooser(ng-hide="currentStorylet")
        #qualities
          .quality(ng-repeat="quality in qualities track by quality.id") {{quality.name}} is {{quality.value}}
        #frontalChoices
          a.choice(ng-repeat="choice in choices track by choice.id" href="")
            .title {{choice.title}}
            .text {{choice.text}}
      #player(ng-show="currentStorylet")
        #event-text {{currentStorylet.text}}
        a.choice(ng-repeat="choice in currentStorylet.choices track by choice.id")
          .text {{choice.text}}
          .requirements {{choice.requirements}}
